{
	"compilerOptions": {
		"target": "ES2016",
		"lib": [
			"ES2021",
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"baseUrl": "./",
		"noEmit": true,
	},
	"include": [
		"packages/*/src",
	],
}